{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "screen-buoy",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": false,
        "show": true,
        "hide": true
      },
      "window": {
        "all": false,
        "show": true,
        "hide": true,
        "close": true,
        "setFocus": true
      },
      "globalShortcut": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.screen-buoy.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 600,
        "height": 800,
        "resizable": true,
        "title": "Screen Buoy",
        "label": "main",
        "url": "index.html",
        "center": true
      }
    ]
  }
} 